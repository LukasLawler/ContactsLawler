@model Contact

<h5>Add a contact</h5>
<div class="container">
    <div class="row justify-content-center">
        <form asp-action="Add" method="post" class="col-12 col-md-10 col-xl-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Number">Phone Number (enter as a number, example: 5555555555 instead of (555) 555-5555)</label>
                <input asp-for="Number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Note">Note</label>
                <input asp-for="Note" class="form-control" />
            </div>
            <input type="hidden" asp-for="ContactId" />
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-controller="Home" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>